.th-head-date
	width 150px

.th-head-type
	width 60px;

.th-head-actions
	width 50px

.th-head-paid
	width 40px

.td-type
	.glyphicon
		margin-left 10px

	.glyphicon-upload
		color income

	.glyphicon-download
		color outgoing

.glyphicon-info-sign
	font-size 16px

.repeat-select
	display none

.balance
	.wrapper-col
		float left
		display inline-block
		color #666
		margin-left 5px

		p
			margin-bottom 5px

		@media tw
			&.pull-right
				float none !important

	.labels
		color #666

	.total-incoming
		color green

	.total-expenses
		color red

	.total
		font-size 20px
		color red;

		&.positive
			color green

.total-balance
	font-size 30px
	color red
	&.positive
		color green

.dataTables_filter
	position absolute
	top 20px
	left 20px
	@media tw
		width 100%
		padding-right 40px

		.search-movements, label
			width 100%

	&:before
		content '\e003'
		font-family: 'Glyphicons Halflings'
		position absolute
		right 8px
		top 8px
		color #555

		@media tw
			right 48px

.fake-element
	width 100%
	height 50px

.add-wrapper
	float right

	@media tw
		margin 0 auto
		float none
		width 105px
		margin-bottom 10px

